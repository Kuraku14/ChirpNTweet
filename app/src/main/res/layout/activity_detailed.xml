<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.dyadav.chirpntweet.activity.DetailedActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:fitsSystemWindows="true"
            android:minHeight="?attr/actionBarSize"
            app:titleTextColor="@android:color/white"
            app:titleMarginStart="32dp"
            app:contentInsetLeft="20dp"
            app:contentInsetStart="20dp" />

        <android.support.v7.widget.CardView
            android:id="@+id/profileCard"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/toolbar"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:elevation="12dp"
            app:cardCornerRadius="25dp"
            android:layout_alignParentLeft="true"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9">
            <ImageButton
                android:id="@+id/profileImage"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="@android:color/primary_text_light"
            android:layout_toEndOf="@+id/profileCard"
            android:gravity="center"
            android:layout_toRightOf="@+id/profileCard" />

        <TextView
            android:id="@+id/screenName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="@android:color/primary_text_light"
            android:layout_toEndOf="@+id/userName"
            android:gravity="center"
            android:layout_toRightOf="@+id/userName" />

        <ImageView
            android:id="@+id/verified"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/toolbar"
            android:layout_toEndOf="@+id/screenName"
            android:layout_toRightOf="@+id/screenName"/>

        <TextView
            android:id="@+id/timeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/profileCard"
            android:layout_toRightOf="@+id/profileCard"
            android:layout_below="@+id/userName"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/tweetBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeStamp"
            android:layout_margin="10dp"
            android:textColor="@android:color/primary_text_light"
            android:layout_alignParentLeft="true"
            android:autoLink="all"
            android:linksClickable="true"/>

        <include layout="@layout/multi_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tweetBody"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</layout>